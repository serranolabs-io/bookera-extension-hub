{
  "name": "bookera-hub",
  "version": "0.0.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint -- --fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --single-quote --trailing-comma=es5 --print-width=100",
    "publish": "turbo build && changeset version && changeset publish",
    "publish-2": "changeset version && changeset publish",
    "clean": "turbo run clean",
    "test-existing": "turbo run test --filter=@serranolabs.io/editor",
    "check-all": "turbo run build lint type-check",
    "check-all-with-tests": "bun run check-all && bun run test-existing"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.10",
  "workspaces": [
    "examples/*",
    "packages/modules/*",
    "packages/extensions/*",
    "packages/shared",
    "packages/editor",
    "packages/typescript-config",
    "apps/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.29.2",
    "@tanstack/lit-form": "^1.11.1"
  }
}
