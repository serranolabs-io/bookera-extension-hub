{
  "name": "bookera-hub",
  "version": "0.0.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "publish": "turbo build && changeset version && changeset publish",
    "lint": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.10",
  "workspaces": [
    "examples/*",
    "packages/modules/*",
    "packages/extensions/*",
    "packages/shared",
    "packages/typescript-config"
  ],
  "dependencies": {
    "@changesets/cli": "^2.29.2"
  }
}
